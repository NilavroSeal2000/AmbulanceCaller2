<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityDriver">

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/secondLayout"
        android:weightSum="3"
        android:layout_below="@+id/firstLayout"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/signindriver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#6D091E"
            android:textColor="#ffffff"
            android:text="Sign in as   DRIVER"
            android:onClick="open_signIn_driver"
            android:textSize="3mm"
            android:layout_weight="1.5" />
        <Button
            android:id="@+id/signupdriver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:onClick="open_signUp_driver"
            android:textColor="#FFFFFF"
            android:background="#2196F3"
            android:text="Sign up as   DRIVER"
            android:textSize="3mm"
            />
    </LinearLayout>

</RelativeLayout>